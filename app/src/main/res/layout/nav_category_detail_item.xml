<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="7dp"
    app:cardCornerRadius="20sp"
    app:cardElevation="4dp">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cat_nav_del_img"
            android:src="@drawable/backpack"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerInside"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cat_nav_del_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:fontFamily="@font/aclonica"
                android:ellipsize="end"
                android:maxLines="2"
                android:singleLine="true"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/del_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Price"
                android:fontFamily="@font/aclonica"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/purple_700"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/add_item"
                    android:layout_width="41dp"
                    android:layout_height="39dp"
                    android:scrollbarSize="10dp"
                    android:src="@drawable/ic_baseline_add_box_24" />

                <TextView
                    android:id="@+id/quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/add_item"
                    android:text="1"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/remove_item"
                    android:layout_width="41dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toEndOf="@+id/quantity"
                    android:scrollbarSize="10dp"
                    android:src="@drawable/ic_baseline_indeterminate_check_box_24" />
            </RelativeLayout>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/buyNow"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:text="Buy Now"
                android:backgroundTint="#1589FF"
                android:background="@drawable/search_box_shape"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:layout_margin="5dp"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:fontFamily="@font/aclonica" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>